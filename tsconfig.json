{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"]
    },
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
